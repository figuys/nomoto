            <lang:LangTextBlock LangKey="K0772" FontSize="14" FontWeight="Regular" Cursor="Hand" TextDecorations="Underline" VerticalAlignment="Bottom" Foreground="{DynamicResource V6_ContentBrushKey}" MouseLeftButtonDown="OnLButtonDown" />
          </StackPanel>
          <Border Grid.Row="2" Margin="0 10 0 0" Background="#00FFFFFF" HorizontalAlignment="Left">
            <ctrl:RescueMatchComboBox Width="460" DataContext="{Binding CbxModelNameVM}" />
          </Border>
          <ListBox Grid.Row="3" Style="{DynamicResource ConditionListBoxStyle}" Margin="0 5 0 6" ItemsSource="{Binding CbxConditionArr}" />
          <StackPanel Name="DownloadPanel" Grid.Row="4" Visibility="{Binding ConfirmVisible}">
            <lang:LangTextBlock Margin="0 14 0 0" LangKey="K1634" Style="{StaticResource v6_comm_text_style_4}" FontWeight="Medium" />
            <Grid Margin="0 3 0 5">
              <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" HorizontalAlignment="Left" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Foreground="#005D7F" FontSize="12" FontWeight="Medium" ToolTip="{Binding RomFileName}" Text="{Binding RomFileName}" />
              <lang:LangTextBlock Grid.Column="1" LangKey="K0990" FontSize="12" Style="{DynamicResource V6_LinkTextStyle}" Visibility="{Binding ReselRomArr.Count, Converter={StaticResource CompareValueConverter}, ConverterParameter=0|1:Collapsed:Visible}" MouseLeftButtonDown="OnReselectRom" />
            </Grid>
          </StackPanel>
          <StackPanel Name="confirm" Visibility="Collapsed" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 130 0 0">
            <Button HorizontalAlignment="Left" Style="{StaticResource v6_comm_base_button}" gc6:ControlAttachPropertyV6.CornerRadius="19" Background="#005D7F" BorderThickness="0" Foreground="#FFFFFF" FontWeight="SemiBold" Content="K0573" MinWidth="158" Height="38" Click="OnBtnConfirm" />
          </StackPanel>
          <Grid Row="6" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Path Width="14" Height="14" Stretch="Fill" Margin="0 0 6 0" Fill="{DynamicResource V6_WarnningBrushKey}" Data="{DynamicResource V6_IconNoticeKey}" VerticalAlignment="Center" />
            <lang:LangTextBlock Grid.Column="1" LangKey="K1106" TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Regular" FontSize="13" Foreground="{DynamicResource V6_WarnningBrushKey}" />
          </Grid>
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>
  <Grid Background="{DynamicResource V6_SubThemeBrushKey}">
    <Grid Background="#FFF7F9FC" Width="960" Height="480">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.45*" />
        <ColumnDefinition Width="0.55*" />
      </Grid.ColumnDefinitions>
      <Border Background="{DynamicResource V6_SubThemeBrushKey}" CornerRadius="15" Margin="30 0 30 20">
        <UIElement.Effect>
          <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#DFDFDF" />
        </UIElement.Effect>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="80" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
          </Grid.ColumnDefinitions>
          <Border Grid.ColumnSpan="2" BorderBrush="{DynamicResource V6_SplitterBrushKey}" BorderThickness="0 0 0 1" />
          <RadioButton Name="rbtn" Grid.Column="0" Content="K1002" Style="{DynamicResource V6_TabButtonStyle}" Tag="True" IsChecked="True" GroupName="G1" Margin="10 0 0 0" Checked="OnRbtnChecked" />
          <RadioButton Grid.Column="1" Content="K1266" Style="{DynamicResource V6_TabButtonStyle}" Tag="False" GroupName="G1" Margin="0 0 10 0" Checked="OnRbtnChecked" />
          <Image Grid.Row="1" Grid.ColumnSpan="2" Width="251" Height="328" Stretch="UniformToFill" Source="{Binding HelpImage}" />
          <lang:LangTextBlock Grid.Row="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="20 4 20 0" FontSize="12" FontWeight="Regular" Foreground="{DynamicResource V6_ContentBrushKey}" LangKey="{Binding AndroidSettingText}" />
        </Grid>
      </Border>
      <Border Grid.Column="1" Margin="10 0 55 0">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <StackPanel Grid.Row="0" Orientation="Horizontal">
            <lang:LangTextBlock LangKey="K1124" FontSize="16" FontWeight="Medium" TextWrapping="Wrap" Foreground="{DynamicResource V6_TitleBrushKey}" />
            <Border>
              <Path Width="14" Height="14" Stretch="Fill" Fill="{DynamicResource V6_ContentBrushKey}" Margin="6 0 4 0" VerticalAlignment="Center" Data="M9.92471484,0 C4.44297656,0 5.68434189E-14,4.44297656 5.68434189E-14,9.92471484 C5.68434189E-14,15.4064531 4.44297656,19.8494297 9.92471484,19.8494297 C15.4064531,19.8494297 19.8494305,15.4064531 19.8494305,9.92471484 C19.8516445,4.44297656 15.4064531,0 9.92471484,0 M9.92471484,17.973457 C5.47952344,17.973457 1.87597266,14.3699063 1.87597266,9.92471484 C1.87597266,5.47952344 5.47952344,1.87597266 9.92471484,1.87597266 C14.3699063,1.87597266 17.973457,5.47952344 17.973457,9.92471484 C17.973457,14.3699063 14.3699063,17.973457 9.92471484,17.973457 M8.79957422,13.3400039 L11.0498555,13.3400039 L11.0498555,15.4728984 L8.79957422,15.4728984 L8.79957422,13.3400039 M10.7818594,12.1661367 L9.02548828,12.1661367 L8.71098047,4.37653125 L11.1406641,4.37653125 L10.7818594,12.1661367" />

<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:lang="clr-namespace:lenovo.mbg.service.framework.lang;assembly=lenovo.mbg.service.framework.lang" xmlns:control="clr-namespace:lenovo.themes.generic.Controls">
  <ControlTemplate x:Key="iconbutton_controltemplate" TargetType="{x:Type control:IconButton}">
    <DockPanel>
      <Image DockPanel.Dock="Left" Width="30" Source="{TemplateBinding control:IconButton.Icon}" />
      <lang:LangTextBlock LangText="{TemplateBinding control:IconButton.Header}" LangKey="{TemplateBinding control:IconButton.Header}" Margin="10 0 0 0" VerticalAlignment="Center" FontSize="18px" FontWeight="Bold" Foreground="{StaticResource main_color_foreground}" />
    </DockPanel>
  </ControlTemplate>
  <ControlTemplate x:Key="label_controltemplate" TargetType="{x:Type Label}">
    <DockPanel>
      <Border DockPanel.Dock="Left" Width="30">
        <Ellipse Width="6" Height="6" VerticalAlignment="Top" Margin="0 6" Fill="{StaticResource main_color_foreground}" />
      </Border>
      <lang:LangTextBlock LangText="{TemplateBinding ContentControl.Content}" LangKey="{TemplateBinding ContentControl.Content}" Foreground="#6B6B6B" FontWeight="Medium" FontSize="16px" VerticalAlignment="Center" TextWrapping="Wrap" />
    </DockPanel>
  </ControlTemplate>
</ResourceDictionary>
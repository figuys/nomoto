<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="lenovo.mbg.service.lmsa.toolbox.UserControlsV6.ScreenCaptureFrameV6" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors" xmlns:iEx="clr-namespace:lenovo.themes.generic.Interactivity.Ex;assembly=lenovo.themes.generic" xmlns:generic="clr-namespace:lenovo.themes.generic;assembly=lenovo.themes.generic" xmlns:genericControls="clr-namespace:lenovo.themes.generic.Controls;assembly=lenovo.themes.generic" xmlns:genericDataList="clr-namespace:lenovo.themes.generic.Component.DataListControl;assembly=lenovo.themes.generic" xmlns:lang="clr-namespace:lenovo.mbg.service.framework.lang;assembly=lenovo.mbg.service.framework.lang" xmlns:phoneConverts="clr-namespace:lenovo.mbg.service.lmsa.phoneManager.Converters;assembly=lenovo.mbg.service.lmsa.phoneManager" Foreground="#FF345375" FontSize="14" xmlns:usercontrolsv6="clr-namespace:lenovo.mbg.service.lmsa.toolbox.UserControlsV6;assembly=lenovo.mbg.service.lmsa.toolbox">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/lenovo.themes.generic;component/ThemesV6/GenericStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/lenovo.themes.generic;component/ThemesV6/ButtonStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/lenovo.themes.generic;component/ThemesV6/CheckBoxStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/lenovo.themes.generic;component/ThemesV6/DataGridStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/lenovo.themes.generic;component/ThemesV6/DrawingImageStyle.xaml" />
        <ResourceDictionary Source="../ThemesV6/IconSvgDrawingIamge.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <BooleanToVisibilityConverter x:Key="bool2VisibilityConverter" />
      <phoneConverts:FormatSizeConverter x:Key="formatSize" />
      <Style x:Key="v6_ScreenCaptureButtonStyle" TargetType="{x:Type genericControls:IconButton}">
        <Setter Property="genericControls:IconButton.NormalBackground" Value="#FF808080" />
        <Setter Property="genericControls:IconButton.NormalForeground" Value="#494949" />
        <Setter Property="genericControls:IconButton.MouseOverBackground" Value="{Binding NormalBackground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.MouseOverForeground" Value="{Binding NormalForeground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.MouseOverIcon" Value="{Binding Icon, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.MouseOverHeader" Value="{Binding Header, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.DisabledBackground" Value="{Binding NormalBackground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.DisabledForeground" Value="{Binding DisabledForeground, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.DisabledIcon" Value="{Binding Icon, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.DisabledHeader" Value="{Binding Header, RelativeSource={RelativeSource Self}}" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type genericControls:IconButton}">
              <Border Name="TemplateRoot" CornerRadius="{TemplateBinding genericControls:IconButton.CornerRadius}" Background="{TemplateBinding genericControls:IconButton.NormalBackground}" BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}">
                <Grid HorizontalAlignment="Center">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{TemplateBinding genericControls:IconButton.IconWidth}" />
                    <ColumnDefinition Width="{TemplateBinding genericControls:IconButton.HeaderWidth}" />
                  </Grid.ColumnDefinitions>
                  <ContentPresenter Name="IconContentSite" Content="{TemplateBinding genericControls:IconButton.Icon}" Margin="{TemplateBinding genericControls:IconButton.IconMargin}" HorizontalAlignment="{TemplateBinding genericControls:IconButton.IconHorizontalAlignment}" VerticalAlignment="{TemplateBinding genericControls:IconButton.IconVerticalAlignment}" />
                  <ContentPresenter Name="HeaderContentSite" Grid.Column="1" Margin="{TemplateBinding genericControls:IconButton.HeaderMargin}" HorizontalAlignment="{TemplateBinding genericControls:IconButton.HeaderHorizontalAlignment}" VerticalAlignment="{TemplateBinding genericControls:IconButton.HeaderVerticalAlignment}" Content="{TemplateBinding genericControls:IconButton.Header}" />
                </Grid>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="IconContentSite" Property="ContentPresenter.Content" Value="{Binding MouseOverIcon, RelativeSource={RelativeSource TemplatedParent}}" />
                  <Setter TargetName="HeaderContentSite" Property="ContentPresenter.Content" Value="{Binding MouseOverHeader, RelativeSource={RelativeSource TemplatedParent}}" />
                  <Setter TargetName="TemplateRoot" Property="Border.Background" Value="{Binding MouseOverBackground, RelativeSource={RelativeSource TemplatedParent}}" />
                  <Setter Property="Foreground" Value="{Binding MouseOverForeground, RelativeSource={RelativeSource Self}}" />
                </Trigger>
                <Trigger Property="UIElement.IsMouseOver" Value="False">
                  <Setter Property="Foreground" Value="{Binding NormalForeground, RelativeSource={RelativeSource Self}}" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter TargetName="IconContentSite" Property="ContentPresenter.Content" Value="{Binding DisabledIcon, RelativeSource={RelativeSource TemplatedParent}}" />
                  <Setter TargetName="HeaderContentSite" Property="ContentPresenter.Content" Value="{Binding DisabledHeader, RelativeSource={RelativeSource TemplatedParent}}" />
                  <Setter TargetName="TemplateRoot" Property="Border.Background" Value="{Binding DisabledBackground, RelativeSource={RelativeSource TemplatedParent}}" />
                  <Setter Property="Foreground" Value="{Binding DisabledForeground, RelativeSource={RelativeSource Self}}" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="v6_MenuTopIconTextboxButtonStyle" TargetType="{x:Type genericControls:IconButton}">
        <Setter Property="MinHeight" Value="14" />
        <Setter Property="FrameworkElement.Cursor" Value="Hand" />
        <Setter Property="Foreground" Value="{StaticResource V6_ContentBrushKey}" />
        <Setter Property="genericControls:IconButton.Icon" Value="{Binding Icon, RelativeSource={RelativeSource Self}}" />
        <Setter Property="genericControls:IconButton.DisabledIcon" Value="{Binding DisabledIcon, RelativeSource={RelativeSource Self}}" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type genericControls:IconButton}">
              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 5 0">
                <Image Name="imgIcon" Width="14" Height="14" Margin="10 0 5 0" Source="{TemplateBinding genericControls:IconButton.Icon}" Stretch="UniformToFill" />
                <lang:LangTextBlock LangKey="{TemplateBinding genericControls:IconButton.LangKey}" FontSize="14" VerticalAlignment="Center" />
              </StackPanel>
              <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter TargetName="imgIcon" Property="Image.Source" Value="{Binding DisabledIcon, RelativeSource={RelativeSource TemplatedParent}}" />
                  <Setter Property="Foreground" Value="{StaticResource V6_DisableBrushKey}" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="v6_VideosListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
        <Setter Property="ListBoxItem.IsSelected" Value="{Binding IsChecked}" />
        <Setter Property="FrameworkElement.OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type ListBoxItem}">
              <Grid Width="125" Height="125" Margin="20 20 0 0">
                <Grid.RowDefinitions>
                  <RowDefinition Height="*" />
                  <RowDefinition Height="24" />
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Grid.RowSpan="2" Width="110" Height="110" Source="{Binding IconSource}" />
                <Border Name="albumChoose" Grid.Row="0" Grid.RowSpan="2" Width="125" Height="125" BorderThickness="2" Visibility="Hidden" BorderBrush="{StaticResource V6_HighLightBkgBrushKey}" />
                <Border Grid.Row="0" Grid.RowSpan="2" Width="120" Height="120" Background="{StaticResource V6_HoverBkgBrushKey_Percent_16}" />
                <Image Name="albumChooseIcon" Width="25" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" Source="{StaticResource v6_icon_picture_selected}" />
                <Grid Row="1" Height="24" Width="120" Background="#80000000">
                  <Image Height="12" Width="18" Margin="5 0 0 0" HorizontalAlignment="Left" Source="{StaticResource v6_icon_video_default}" />
                  <TextBlock Foreground="#FFFFFFFF" Margin="0 0 5 0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Text="{Binding Duration}" />
                </Grid>
              </Grid>
              <ControlTemplate.Triggers>
                <Trigger Property="ListBoxItem.IsSelected" Value="True">
                  <Setter TargetName="albumChoose" Property="Visibility" Value="Visible" />
                  <Setter TargetName="albumChooseIcon" Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                  <Setter TargetName="albumChoose" Property="Visibility" Value="Visible" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="v6_VideosListBoxStyle" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ListBox.SelectionMode" Value="Multiple" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource v6_VideosListBoxItemStyle}" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type ListBox}">
              <Border Background="{TemplateBinding Control.Background}">
                <ItemsPresenter />
              </Border>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
          <Setter.Value>
            <ItemsPanelTemplate>
              <WrapPanel />
            </ItemsPanelTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="v6_videoIconList" TargetType="{x:Type ListBox}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="ItemsPanel">
          <Setter.Value>
            <ItemsPanelTemplate>
              <WrapPanel IsItemsHost="True" />
            </ItemsPanelTemplate>
          </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
          <Setter.Value>
            <Style TargetType="{x:Type ListBoxItem}">
              <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}" />
              <Setter Property="Background" Value="#FF0000FF" />
              <Setter Property="FontSize" Value="9" />
              <Setter Property="BorderThickness" Value="1" />
              <Setter Property="BorderBrush" Value="#efefef" />
              <Setter Property="HorizontalContentAlignment" Value="Stretch" />
              <Setter Property="UIElement.Opacity" Value="1" />
              <Setter Property="Margin" Value="11 15 10 5" />
              <Setter Property="Height" Value="146" />
              <Setter Property="Width" Value="105" />
              <Setter Property="ListBoxItem.IsSelected" Value="{Binding IsChecked, Mode=TwoWay}" />
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Border CornerRadius="4" BorderThickness="0">
                      <ContentPresenter />
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
          </Setter.Value>
        </Setter>
        <Style.Triggers>
          <Trigger Property="Selector.IsSelected" Value="True">
            <Setter Property="UIElement.Opacity" Value="1" />
          </Trigger>
        </Style.Triggers>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Background="#FFF7F9FC">
    <Grid.RowDefinitions>
      <RowDefinition Height="100" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <genericControls:IconButton Grid.Row="0" Style="{StaticResource v6_ScreenCaptureButtonStyle}" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Bottom" BorderThickness="0" NormalBackground="#00FFFFFF" IconWidth="77" Width="77" Height="77" IsEnabled="{Binding StartBtnEnable}" Command="{Binding StartCommand}">
      <genericControls:IconButton.Icon>
        <Image Source="{StaticResource v6_icon_capture_recording}" Stretch="UniformToFill" />
      </genericControls:IconButton.Icon>
      <genericControls:IconButton.DisabledIcon>
        <Image Source="{StaticResource v6_icon_capture_recording_disable}" Stretch="UniformToFill" />
      </genericControls:IconButton.DisabledIcon>
    </genericControls:IconButton>
    <lang:LangTextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF9FAEBF" LangText="Click the button to enable screen recording on your device." LangKey="K0254" Margin="0 20 0 10" />
    <Grid Row="2" Background="#FFFFFFFF" Width="952" MaxHeight="345" VerticalAlignment="Top">
      <Grid.RowDefinitions>
        <RowDefinition Height="50" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <StackPanel Grid.Row="0" Orientation="Horizontal">
        <lang:LangButton Name="btnExport" LangKey="K0484" Style="{StaticResource V6_NormalBtnStyle}" Background="#FF345375" Margin="10 0" IsEnabled="{Binding ExportBtnEnable, Mode=TwoWay}" Command="{Binding ExportBtnClick}" CommandParameter="{Binding}" />
        <genericControls:IconButton Name="btnDelete" LangKey="K0583" Icon="{StaticResource v6_device_icon_delete}" DisabledIcon="{StaticResource v6_device_icon_delete_disable}" Style="{StaticResource v6_MenuTopIconTextboxButtonStyle}" IsEnabled="{Binding DeleteBtnEnable, Mode=TwoWay}" Command="{Binding DeleteBtnClick}" CommandParameter="{Binding}" />
        <genericControls:IconButton LangKey="K0473" Icon="{StaticResource v6_device_icon_refresh}" DisabledIcon="{StaticResource v6_device_icon_refresh_disable}" Style="{StaticResource v6_MenuTopIconTextboxButtonStyle}" IsEnabled="{Binding RefreshBtnEnable, Mode=TwoWay}" Command="{Binding RefreshBtnClick}" CommandParameter="{Binding}" />
      </StackPanel>
      <StackPanel Name="spForVideo" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
        <RadioButton Name="rbtListView" IsChecked="True" GroupName="ViewMode" Margin="5 0 5 0" Click="ViewButtonClick">
          <Control.Template>
            <ControlTemplate TargetType="{x:Type RadioButton}">
              <Grid>
                <Image Name="imgView" Width="18" Source="{StaticResource v6_icon_video_list}" Cursor="Hand" />
              </Grid>
              <ControlTemplate.Triggers>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                  <Setter TargetName="imgView" Value="{StaticResource v6_icon_video_list_disalbe}" Property="Image.Source" />
                  <Setter TargetName="imgView" Property="FrameworkElement.Cursor" Value="Arrow" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Control.Template>
        </RadioButton>
        <RadioButton Name="rbtTileView" IsChecked="False" GroupName="ViewMode" Margin="5 0 10 0" Click="ViewButtonClick">
          <Control.Template>
            <ControlTemplate TargetType="{x:Type RadioButton}">
              <Grid>
                <Image Name="imgView" Width="18" Source="{StaticResource v6_device_icon_card}" Cursor="Hand" />
              </Grid>
              <ControlTemplate.Triggers>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                  <Setter TargetName="imgView" Value="{StaticResource v6_device_icon_card_disable}" Property="Image.Source" />
                  <Setter TargetName="imgView" Property="FrameworkElement.Cursor" Value="Arrow" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Control.Template>
        </RadioButton>
      </StackPanel>
      <Grid Name="VideoView" Row="1" Background="#00FFFFFF">
        <Separator Background="#FFD4DCE3" VerticalAlignment="Top" />
        <DataGrid Name="dg" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserAddRows="False" Style="{StaticResource v6_DefaultDataGrid}" CanUserSortColumns="True" CanUserResizeColumns="True" CanUserResizeRows="False" BorderBrush="#00FFFFFF" CellStyle="{StaticResource GZDefaultDataGridCell}" Visibility="{Binding IsChecked, ElementName=rbtListView, Converter={StaticResource bool2VisibilityConverter}}" ItemsSource="{Binding VideoDataList}">
          <DataGrid.Columns>
            <DataGridTemplateColumn CanUserResize="False">
              <DataGridColumn.HeaderTemplate>
                <DataTemplate>
                  <Border>
                    <CheckBox Style="{StaticResource v6_defaultCheckBoxStyle}" IsChecked="{Binding Path=DataContext.IsAllSelected, ElementName=dg}" Click="CheckAllClick" />
                  </Border>
                </DataTemplate>
              </DataGridColumn.HeaderTemplate>
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                  <CheckBox Style="{StaticResource v6_defaultCheckBoxStyle}" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="CellCheckBoxClick" />
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn SortMemberPath="VideoName" MinWidth="300" Width="*" Header="K0487" IsReadOnly="True">
              <DataGridColumn.HeaderTemplate>
                <DataTemplate>
                  <lang:LangTextBlock LangText="Name" LangKey="K0487" />
                </DataTemplate>
              </DataGridColumn.HeaderTemplate>
              <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                  <Border VerticalAlignment="Center" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                      <Image Name="dirIcon" Width="20" Height="20" HorizontalAlignment="Left" Source="{StaticResource v6_video_icon}" />
                      <TextBlock VerticalAlignment="Center" Margin="8 0 0 0" Text="{Binding VideoName}" />
                    </StackPanel>
                  </Border>
                </DataTemplate>
              </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTextColumn SortMemberPath="Duration" Width="120" Header="K0513" Binding="{Binding Duration}">
              <DataGridColumn.HeaderTemplate>
                <DataTemplate>
                  <lang:LangTextBlock LangText="Duration" LangKey="K0513" />
                </DataTemplate>
              </DataGridColumn.HeaderTemplate>
            </DataGridTextColumn>
            <DataGridTextColumn SortMemberPath="Size" Width="100" Header="K0378" Binding="{Binding Size, Converter={StaticResource formatSize}}">
              <DataGridColumn.HeaderTemplate>
                <DataTemplate>
                  <lang:LangTextBlock LangText="Size" LangKey="K0378" />
                </DataTemplate>
              </DataGridColumn.HeaderTemplate>
            </DataGridTextColumn>
            <DataGridTextColumn Width="160" Header="K0545" Binding="{Binding ModifiedDate}">
              <DataGridColumn.HeaderTemplate>
                <DataTemplate>
                  <lang:LangTextBlock LangText="Modified Date" LangKey="K0545" />
                </DataTemplate>
              </DataGridColumn.HeaderTemplate>
            </DataGridTextColumn>
          </DataGrid.Columns>
        </DataGrid>
        <ScrollViewer Name="VideoTileView" Background="#FFFFFF" Style="{StaticResource V6_CommonScrollViewerStyle}" Margin="0 5 0 0" Visibility="{Binding IsChecked, ElementName=rbtTileView, Converter={StaticResource bool2VisibilityConverter}}" PreviewMouseWheel="VideoTileList_PreviewMouseWheel">
          <ListBox Name="lbTileView" Style="{StaticResource v6_VideosListBoxStyle}" ItemsSource="{Binding VideoDataList}" SelectionChanged="lbTileVideoSelectionChanged" />
        </ScrollViewer>
      </Grid>
    </Grid>
    <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="30 5 0 5" Orientation="Vertical">
      <StackPanel Orientation="Horizontal" Visibility="{Binding TxtTipsVisibility}">
        <Image Height="15" Width="15" Source="{StaticResource v6_icon_capture_warning}" />
        <lang:LangTextBlock LangText="Tips:Please use the tablet in portrait mode." LangKey="K1015" Foreground="#FFFF4042" Margin="5 0 0 0" />
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0 8 0 0">
        <Image Height="15" Width="15" Source="{StaticResource v6_icon_gifmaker_warning}" />
        <lang:LangTextBlock Margin="5 0 0 0" Foreground="#FF005D7F" LangText="When finished recording on your device, select the Refresh button to view the recording file here." Width="930" TextWrapping="Wrap" LangKey="K1432" />
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="lenovo.mbg.service.lmsa.ButtonEx_Common" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" x:Name="buttonEx_Common" xmlns:lmsa="clr-namespace:lenovo.mbg.service.lmsa;assembly=Software Fix">
  <Grid>
    <Border Name="ShandowBorder" Margin="10,10,0,0" Background="#FF000000" Opacity="0.08" Width="{Binding ButtonWidth, ElementName=buttonEx_Common}" CornerRadius="{Binding CronRadio, ElementName=buttonEx_Common}" Height="{Binding ButtonHeight, ElementName=buttonEx_Common}" />
    <Border Name="MainBorder" Background="#399CED" BorderBrush="#ebebeb" CornerRadius="{Binding CronRadio, ElementName=buttonEx_Common}" Width="{Binding ButtonWidth, ElementName=buttonEx_Common}" Height="{Binding ButtonHeight, ElementName=buttonEx_Common}">
      <TextBlock Foreground="#FFFFFFFF" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding StrButtonTitle, ElementName=buttonEx_Common}" />
    </Border>
  </Grid>
</UserControl>
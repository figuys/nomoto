        <lang:LangLabel Style="{StaticResource v6_PriceTextNote2Style}" LangKey="K1671" LangContent="Use all features of Software Fix Client" />
        <lang:LangLabel Style="{StaticResource v6_PriceTextNote2Style}" LangKey="K1672" LangContent="One month validity period" />
      </StackPanel>
    </Border>

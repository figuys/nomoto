      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <FrameworkElement.Resources>
        <ResourceDictionary>
          <Style x:Key="subLineHeader" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="TextBlock.LineHeight" Value="14" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="Margin" Value="0 0 0 18" />
            <Setter Property="TextWrapping" Value="Wrap" />
          </Style>
          <Style x:Key="{x:Type lang:LangTextBlock}" TargetType="{x:Type lang:LangTextBlock}" BasedOn="{StaticResource {x:Type lang:LangTextBlock}}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Regular" />
            <Setter Property="TextBlock.LineHeight" Value="16" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0 0 0 18" />
          </Style>
          <Style x:Key="{x:Type lang:LangRun}" TargetType="{x:Type lang:LangRun}" BasedOn="{StaticResource {x:Type lang:LangRun}}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Regular" />
            <Setter Property="Foreground" Value="#000000" />
          </Style>
        </ResourceDictionary>
      </FrameworkElement.Resources>
      <lang:LangTextBlock Grid.Column="0" Grid.ColumnSpan="2" LangText="Connect via WiFi" LangKey="K0447" FontSize="21" LineHeight="18" FontWeight="SemiBold" Foreground="#000000" />
      <TextBlock Grid.Row="1" Grid.Column="0" Text="1. " Style="{StaticResource subLineHeader}" />
      <lang:LangTextBlock Grid.Row="1" Grid.Column="1" LangText="Connect your device to the same WiFi with PC." LangKey="K0448" />
      <TextBlock Grid.Row="2" Grid.Column="0" Text="2. " Style="{StaticResource subLineHeader}" />
      <lang:LangTextBlock Grid.Row="2" Grid.Column="1" LangText="If Device Help App is installed in your device, use it to scan the following QR code to connect." LangKey="K0450" />
      <TextBlock Grid.Row="3" Grid.Column="0" Text="3. " Style="{StaticResource subLineHeader}" />
      <lang:LangTextBlock Grid.Row="3" Grid.Column="1">
        <lang:LangRun LangText="If no Device Help App is installed, download and install Mobile Assistant App from" LangKey="K0449" /> <lang:LangRun LangText="rasa.page.link/ma" LangKey="K0847" Foreground="#43B5E2" TextDecorations="Underline" Cursor="Hand"><ContentElement.InputBindings><MouseBinding Gesture="LeftClick" Command="{Binding AppDownloadCommand}" /></ContentElement.InputBindings></lang:LangRun> <lang:LangRun LangText="Use it to scan the following QR code to connect." LangKey="K0807" /></lang:LangTextBlock>
      <Image Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 0" Grid.Row="4" Height="156" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" Source="{Binding QrImageSource}" />
    </Grid>

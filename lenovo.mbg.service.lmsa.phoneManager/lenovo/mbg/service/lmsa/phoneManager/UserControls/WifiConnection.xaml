      <ColumnDefinition Width="180" />
      <ColumnDefinition Width="44.8" />
      <ColumnDefinition Width="356*" MinWidth="356" MaxWidth="700" />
      <ColumnDefinition Width="42*" />
    </Grid.ColumnDefinitions>
    <Image Grid.Row="0" Grid.Column="1" Source="{DynamicResource wifi_moto_app_scan_demoImg}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" />
